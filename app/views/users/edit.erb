<body class="center">

<h1>Update User</h1>

<form action="/users/<%=@user.id%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="user[name]" value="<%=@user.name%>">

  <br></br>

  <label>Choose an existing motto:</label>

  <br></br>

  <%Motto.all.each do |motto|%>
    <input type="checkbox" name="user[motto_ids][]" value="<%=motto.id%>" <%='checked' if @user.mottos.include?(motto) %>><%=motto.content%></input>
  <%end%>

  <br></br>

  <label>and/or, create a new motto:</label>
  <br></br>
  <label>name:</label>
    <input  type="text" name="motto[content]"></input>
  <br></br>
  <input type="submit" value="Update User">
</form>

</body>

