
<body class="center">
  
<h1>Update Motto</h1>

<form action="/mottos/<%=@motto.id%>" method="POST">
  <label>Motto:</label>

  <br></br>

  <input type="text" name="motto[content]" value="<%=@motto.content%>">

  <br></br>

  <label>Choose an existing user:</label>

  <br></br>

  <%User.all.each do |user|%>
    <input type="checkbox" name="motto[user_id][]" value="<%=user.id%>" <%='checked' if (@motto.user_id.equal?(user.id)) %>><%=user.name%></input>
  <%end%>

  <br></br>

  <label>and/or, create a new user:</label>
  <br></br>
  <label>name:</label>
    <input  type="text" name="user[name]"></input>
  <br></br>
  <input type="submit" id="button" value="Update Motto">
</form>

</body>
